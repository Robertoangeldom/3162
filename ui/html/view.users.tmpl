{{template "base" .}}
{{define "content"}}
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone</th>
            <th>Roles</th>
            <th>Password</th>
            <th>Activated</th>
            <th>Created At</th>
          </tr>
    </thead>
    <tbody>
        {{ if . }}
        {{ range . }}
            <tr>
                
                    <td>{{.ID}}</td>
                    <td>{{.Email}}</td>
                    <td>{{.FirstName}}</td>
                    <td>{{.LastName}}</td>
                    <td>{{.Address}} </td>
                    <td>{{.Phone}} </td>
                    <td>{{.Roles}} </td>
                    <td>{{.Password}} </td>
                    <td>{{.Activated}} </td>
                    <td>{{.CreatedAt.Format "02 Jan 2006 15:04:05"}}</td>
                    <td><a href="/update?id={{.ID}}"><button type="submit" class="btn btn-success" value="Update">Update</button></a></td>

                    
            </tr>
        {{ end }}
        {{ else }}
    <p>No data available.</p>
    {{ end }}
    </tbody>
</table>
{{ end }}
